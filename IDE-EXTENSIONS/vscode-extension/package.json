{
  "name": "lanonasis-memory",
  "displayName": "LanOnasis Memory Assistant",
  "description": "Memory as a Service integration - AI-powered memory management with semantic search (Compatible with CLI v3.0.6+)",
  "version": "2.0.9",
  "publisher": "LanOnasis",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/lanonasis/lanonasis-maas"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Machine Learning",
    "Data Science"
  ],
  "keywords": [
    "memory",
    "ai",
    "knowledge",
    "search",
    "notes",
    "documentation"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "browser": "./out/extension.js",
  "capabilities": {
    "virtualWorkspaces": {
      "supported": "limited",
      "description": "Some features may not work without local file system access"
    },
    "untrustedWorkspaces": {
      "supported": "limited",
      "description": "API key management and memory creation require workspace trust"
    }
  },
  "contributes": {
    "chatParticipants": [
      {
        "id": "lanonasis-memory.memory-assistant",
        "name": "lanonasis",
        "fullName": "LanOnasis Memory",
        "description": "Search, recall, and manage your memory bank",
        "isSticky": true,
        "commands": [
          {
            "name": "recall",
            "description": "Search and recall memories semantically"
          },
          {
            "name": "save",
            "description": "Save current context or selection as a memory"
          },
          {
            "name": "list",
            "description": "List recent memories"
          },
          {
            "name": "context",
            "description": "Get relevant context for current file/project"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "lanonasis.searchMemory",
        "title": "Search Memories",
        "category": "Lanonasis",
        "icon": "$(search)"
      },
      {
        "command": "lanonasis.createMemory",
        "title": "Create Memory from Selection",
        "category": "Lanonasis",
        "icon": "$(add)"
      },
      {
        "command": "lanonasis.createMemoryFromFile",
        "title": "Create Memory from Current File",
        "category": "Lanonasis",
        "icon": "$(file-add)"
      },
      {
        "command": "lanonasis.createSampleMemory",
        "title": "Create Sample Memory",
        "category": "Lanonasis",
        "icon": "$(lightbulb)"
      },
      {
        "command": "lanonasis.authenticate",
        "title": "Authenticate",
        "category": "Lanonasis",
        "icon": "$(key)"
      },
      {
        "command": "lanonasis.refreshMemories",
        "title": "Refresh Memories",
        "category": "Lanonasis",
        "icon": "$(refresh)"
      },
      {
        "command": "lanonasis.openMemory",
        "title": "Open Memory",
        "category": "Lanonasis"
      },
      {
        "command": "lanonasis.switchMode",
        "title": "Switch Gateway/Direct API Mode",
        "category": "Lanonasis",
        "icon": "$(settings-gear)"
      },
      {
        "command": "lanonasis.manageApiKeys",
        "title": "Manage API Keys",
        "category": "Lanonasis",
        "icon": "$(key)"
      },
      {
        "command": "lanonasis.createProject",
        "title": "Create API Key Project",
        "category": "Lanonasis",
        "icon": "$(folder-library)"
      },
      {
        "command": "lanonasis.viewProjects",
        "title": "View API Key Projects",
        "category": "Lanonasis",
        "icon": "$(folder-opened)"
      },
      {
        "command": "lanonasis.showConnectionInfo",
        "title": "Show Connection Status",
        "category": "Lanonasis",
        "icon": "$(info)"
      },
      {
        "command": "lanonasis.showMCPStatus",
        "title": "Show MCP Server Status",
        "category": "Lanonasis",
        "icon": "$(plug)"
      },
      {
        "command": "lanonasis.configureApiKey",
        "title": "Configure Authentication",
        "category": "Lanonasis",
        "icon": "$(key)"
      },
      {
        "command": "lanonasis.clearApiKey",
        "title": "Clear API Key",
        "category": "Lanonasis",
        "icon": "$(trash)"
      },
      {
        "command": "lanonasis.checkApiKeyStatus",
        "title": "Check API Key Status",
        "category": "Lanonasis",
        "icon": "$(shield)"
      },
      {
        "command": "lanonasis.testConnection",
        "title": "Test Connection",
        "category": "Lanonasis",
        "icon": "$(plug)"
      },
      {
        "command": "lanonasis.runDiagnostics",
        "title": "Run System Diagnostics",
        "category": "Lanonasis",
        "icon": "$(checklist)"
      },
      {
        "command": "lanonasis.showLogs",
        "title": "Show Extension Logs",
        "category": "Lanonasis",
        "icon": "$(output)"
      },
      {
        "command": "lanonasis.refreshApiKeys",
        "title": "Refresh API Keys",
        "category": "Lanonasis",
        "icon": "$(refresh)"
      },
      {
        "command": "lanonasis.viewProjectDetails",
        "title": "View Project Details",
        "category": "Lanonasis",
        "icon": "$(folder-opened)"
      },
      {
        "command": "lanonasis.createApiKey",
        "title": "Create API Key",
        "category": "Lanonasis",
        "icon": "$(key)"
      },
      {
        "command": "lanonasis.deleteProject",
        "title": "Delete Project",
        "category": "Lanonasis",
        "icon": "$(trash)"
      },
      {
        "command": "lanonasis.viewApiKeyDetails",
        "title": "View API Key Details",
        "category": "Lanonasis",
        "icon": "$(info)"
      },
      {
        "command": "lanonasis.rotateApiKey",
        "title": "Rotate API Key",
        "category": "Lanonasis",
        "icon": "$(refresh)"
      },
      {
        "command": "lanonasis.deleteApiKey",
        "title": "Delete API Key",
        "category": "Lanonasis",
        "icon": "$(trash)"
      },
      {
        "command": "lanonasis.captureContext",
        "title": "Capture to Memory",
        "category": "Lanonasis",
        "icon": "$(save)"
      },
      {
        "command": "lanonasis.captureClipboard",
        "title": "Capture Clipboard to Memory",
        "category": "Lanonasis",
        "icon": "$(clippy)"
      },
      {
        "command": "lanonasis.quickCapture",
        "title": "Quick Capture (Selection or Clipboard)",
        "category": "Lanonasis",
        "icon": "$(zap)"
      }
    ],
    "keybindings": [
      {
        "command": "lanonasis.searchMemory",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m",
        "when": "editorTextFocus"
      },
      {
        "command": "lanonasis.createMemory",
        "key": "ctrl+shift+alt+m",
        "mac": "cmd+shift+alt+m",
        "when": "editorHasSelection"
      },
      {
        "command": "lanonasis.manageApiKeys",
        "key": "ctrl+shift+k",
        "mac": "cmd+shift+k",
        "when": "editorTextFocus"
      },
      {
        "command": "lanonasis.captureContext",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorHasSelection || terminalFocus || panelFocus"
      },
      {
        "command": "lanonasis.captureClipboard",
        "key": "ctrl+alt+v",
        "mac": "cmd+alt+v"
      },
      {
        "command": "lanonasis.quickCapture",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "!editorTextFocus || editorHasSelection"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "lanonasis.createMemory",
          "when": "editorHasSelection",
          "group": "lanonasis"
        },
        {
          "command": "lanonasis.captureContext",
          "when": "editorHasSelection",
          "group": "lanonasis"
        }
      ],
      "terminal/context": [
        {
          "command": "lanonasis.captureClipboard",
          "group": "lanonasis"
        },
        {
          "command": "lanonasis.quickCapture",
          "group": "lanonasis"
        }
      ],
      "explorer/context": [
        {
          "command": "lanonasis.createMemoryFromFile",
          "when": "resourceScheme == file",
          "group": "lanonasis"
        },
        {
          "command": "lanonasis.quickCapture",
          "group": "lanonasis"
        }
      ],
      "scm/resourceState/context": [
        {
          "command": "lanonasis.quickCapture",
          "group": "lanonasis"
        }
      ],
      "comments/comment/context": [
        {
          "command": "lanonasis.quickCapture",
          "group": "lanonasis"
        }
      ],
      "view/title": [
        {
          "command": "lanonasis.refreshMemories",
          "when": "view == lanonasisMemories",
          "group": "navigation"
        },
        {
          "command": "lanonasis.authenticate",
          "when": "view == lanonasisMemories && !lanonasis.authenticated",
          "group": "navigation"
        },
        {
          "command": "lanonasis.refreshApiKeys",
          "when": "view == lanonasisApiKeys",
          "group": "navigation"
        },
        {
          "command": "lanonasis.createProject",
          "when": "view == lanonasisApiKeys && lanonasis.authenticated",
          "group": "navigation"
        },
        {
          "command": "lanonasis.authenticate",
          "when": "view == lanonasisApiKeys && !lanonasis.authenticated",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "lanonasis.viewProjectDetails",
          "when": "view == lanonasisApiKeys && viewItem == project",
          "group": "inline"
        },
        {
          "command": "lanonasis.createApiKey",
          "when": "view == lanonasisApiKeys && viewItem == project",
          "group": "inline"
        },
        {
          "command": "lanonasis.deleteProject",
          "when": "view == lanonasisApiKeys && viewItem == project",
          "group": "inline@2"
        },
        {
          "command": "lanonasis.viewApiKeyDetails",
          "when": "view == lanonasisApiKeys && viewItem == apiKey",
          "group": "inline"
        },
        {
          "command": "lanonasis.rotateApiKey",
          "when": "view == lanonasisApiKeys && viewItem == apiKey",
          "group": "inline@1"
        },
        {
          "command": "lanonasis.deleteApiKey",
          "when": "view == lanonasisApiKeys && viewItem == apiKey",
          "group": "inline@2"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lanonasis",
          "title": "Lanonasis Memory",
          "icon": "images/icon.svg"
        }
      ]
    },
    "views": {
      "lanonasis": [
        {
          "type": "webview",
          "id": "lanonasis.sidebar",
          "name": "Memory Assistant",
          "icon": "$(brain)",
          "contextualTitle": "Lanonasis Memory"
        },
        {
          "type": "tree",
          "id": "lanonasisMemories",
          "name": "Memories",
          "icon": "$(list-tree)",
          "when": "config.lanonasis.showTreeView"
        },
        {
          "type": "tree",
          "id": "lanonasisApiKeys",
          "name": "API Keys",
          "icon": "$(key)",
          "when": "lanonasis.enableApiKeyManagement"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "lanonasisMemories",
        "contents": "Welcome to Lanonasis Memory! ðŸ§ \n\nTo get started, you need to authenticate with your Lanonasis account.\n\n[Connect in Browser](command:lanonasis.authenticate?%5B%22oauth%22%5D)\n\n[Enter API Key](command:lanonasis.authenticate?%5B%22apikey%22%5D)\n\n[Get API Key](https://api.lanonasis.com)\n\n---\n\n**What is Lanonasis Memory?**\n\nLanonasis Memory is an AI-powered memory management system that helps you:\n\nâ€¢ Store and organize knowledge with semantic search\nâ€¢ Create memories from code selections\nâ€¢ Find relevant information instantly\nâ€¢ Manage API keys and projects\n\n**Need Help?**\n\n[View Documentation](https://docs.lanonasis.com)\n[Report Issue](https://github.com/lanonasis/lanonasis-maas/issues)",
        "when": "!lanonasis.authenticated"
      },
      {
        "view": "lanonasisApiKeys",
        "contents": "Welcome to API Key Management! ðŸ”‘\n\nAuthenticate to manage your API keys and projects.\n\n[Connect in Browser](command:lanonasis.authenticate?%5B%22oauth%22%5D)\n\n[Enter API Key](command:lanonasis.authenticate?%5B%22apikey%22%5D)",
        "when": "!lanonasis.authenticated"
      }
    ],
    "configuration": {
      "title": "Lanonasis Memory",
      "properties": {
        "lanonasis.apiUrl": {
          "type": "string",
          "default": "https://api.lanonasis.com",
          "markdownDescription": "Lanonasis Memory Service API URL. Change only if using a custom deployment."
        },
        "lanonasis.gatewayUrl": {
          "type": "string",
          "default": "https://api.lanonasis.com",
          "markdownDescription": "Onasis Gateway URL for centralized API management. Recommended for most users."
        },
        "lanonasis.useGateway": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Use Onasis Gateway for centralized API management. Default is direct REST API connection."
        },
        "lanonasis.authUrl": {
          "type": "string",
          "default": "https://auth.lanonasis.com",
          "markdownDescription": "OAuth authentication server URL. Only change if using a custom authentication deployment."
        },
        "lanonasis.apiKey": {
          "type": "string",
          "format": "password",
          "markdownDescription": "**DEPRECATED**: API keys are now stored securely. Use the authentication command instead. This setting will be removed in a future version.",
          "deprecationMessage": "API keys are now stored securely using VS Code's SecretStorage. Use the 'Lanonasis: Authenticate' command instead."
        },
        "lanonasis.defaultMemoryType": {
          "type": "string",
          "enum": [
            "context",
            "project",
            "knowledge",
            "reference",
            "personal",
            "workflow"
          ],
          "default": "context",
          "description": "Default memory type for new memories"
        },
        "lanonasis.searchLimit": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 50,
          "description": "Maximum number of search results to show"
        },
        "lanonasis.enableAutoCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable memory-based code completion suggestions"
        },
        "lanonasis.enableApiKeyManagement": {
          "type": "boolean",
          "default": true,
          "description": "Enable API key management features (requires backend support)"
        },
        "lanonasis.defaultEnvironment": {
          "type": "string",
          "enum": [
            "development",
            "staging",
            "production"
          ],
          "default": "development",
          "description": "Default environment for API key management"
        },
        "lanonasis.organizationId": {
          "type": "string",
          "description": "Your organization ID for API key management"
        },
        "lanonasis.preferCLI": {
          "type": "boolean",
          "default": true,
          "description": "Prefer CLI integration when @lanonasis/cli v3.0.6+ is available"
        },
        "lanonasis.enableMCP": {
          "type": "boolean",
          "default": true,
          "description": "Enable Model Context Protocol channels when available"
        },
        "lanonasis.mcpAutoDiscover": {
          "type": "boolean",
          "default": true,
          "description": "Auto-discover embedded CLI MCP server at startup"
        },
        "lanonasis.mcpServerUrl": {
          "type": "string",
          "default": "",
          "markdownDescription": "Custom MCP server URL. Leave empty for auto-discovery (default: `http://localhost:3001`)"
        },
        "lanonasis.transportPreference": {
          "type": "string",
          "enum": [
            "auto",
            "websocket",
            "http"
          ],
          "default": "auto",
          "markdownDescription": "Preferred transport mode. `auto` tries WebSocket first, then falls back to HTTP."
        },
        "lanonasis.websocketUrl": {
          "type": "string",
          "default": "wss://mcp.lanonasis.com/ws",
          "markdownDescription": "WebSocket MCP server URL for real-time communication."
        },
        "lanonasis.enableRealtime": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Enable real-time updates via WebSocket when available."
        },
        "lanonasis.cliDetectionTimeout": {
          "type": "number",
          "default": 2000,
          "minimum": 500,
          "maximum": 10000,
          "description": "CLI detection timeout in milliseconds"
        },
        "lanonasis.verboseLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable verbose logging for CLI integration debugging"
        },
        "lanonasis.showPerformanceFeedback": {
          "type": "boolean",
          "default": false,
          "description": "Show brief performance feedback (CLI vs API usage)"
        },
        "lanonasis.showTreeView": {
          "type": "boolean",
          "default": false,
          "description": "Show traditional tree view alongside modern sidebar (for advanced users)"
        },
        "lanonasis.enableBulkActions": {
          "type": "boolean",
          "default": true,
          "description": "Enable bulk selection, tag, delete, and export actions in the sidebar"
        },
        "lanonasis.sidebarTypeOrder": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Order of memory type sections in the enhanced sidebar"
        },
        "lanonasis.sidebarHiddenTypes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Memory type sections hidden in the enhanced sidebar"
        },
        "lanonasis.sidebarTheme": {
          "type": "string",
          "enum": [
            "default",
            "sunset",
            "ocean",
            "slate"
          ],
          "default": "default",
          "description": "Accent theme for the enhanced sidebar"
        },
        "lanonasis.memoryTemplates": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "Bug report: Steps to reproduce / Expected / Actual / Logs",
            "Note: Context / Key points / Next steps",
            "Spec: Goal / Scope / Constraints / Open questions"
          ],
          "description": "Templates shown in the create form; each entry is a preset body"
        },
        "lanonasis.useEnhancedUI": {
          "type": "boolean",
          "default": false,
          "description": "Use enhanced React-based UI with modern design (experimental)"
        },
        "lanonasis.enableLegacyViews": {
          "type": "boolean",
          "default": false,
          "description": "Enable legacy tree providers (Memories/API keys) when you prefer the older explorer views"
        },
        "lanonasis.refineEndpoint": {
          "type": "string",
          "default": "",
          "markdownDescription": "Optional: HTTP endpoint for prompt refinement. If unset, local refinement is used."
        },
        "lanonasis.refineApiKey": {
          "type": "string",
          "default": "",
          "markdownDescription": "Bearer token for the refine endpoint. Stored in settings; keep scoped to backend refine service."
        }
      }
    }
  },
  "extensionKind": [
    "ui"
  ],
  "scripts": {
    "compile": "node esbuild.config.mjs",
    "compile:dev": "node esbuild.config.mjs",
    "compile:prod": "node esbuild.config.mjs --production",
    "compile:tsc": "tsc -p ./",
    "watch": "node esbuild.config.mjs --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "test:components": "vitest run src/components/__tests__",
    "test:integration": "vitest run src/integration/__tests__",
    "test:e2e": "playwright test",
    "test:all": "npm run test:unit && npm run test:e2e",
    "package": "npm run compile:prod && npm run build:react && vsce package --no-dependencies",
    "publish": "vsce publish",
    "build:package": "npm run compile:prod && npm run build:react && vsce package --no-dependencies",
    "build:css": "tailwindcss -i ./src/react/styles.css -o ./media/react-styles.css --minify",
    "build:react": "npm run build:css && webpack --config webpack.react.config.js",
    "vscode:prepublish": "npm run compile:prod && npm run build:react"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "^1.4.0",
    "@lanonasis/ide-extension-core": "file:../../packages/ide-extension-core",
    "@lanonasis/memory-client": "^2.2.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.26.1",
    "lucide-react": "^0.560.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.9.0",
    "autoprefixer": "^10.4.22",
    "css-loader": "^7.1.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-vitest-globals": "^1.5.0",
    "jsdom": "^27.3.0",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.18",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vitest": "^4.0.15",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "overrides": {
    "glob": "^11.1.0",
    "js-yaml": "^4.1.1",
    "jws": "^3.2.3",
    "qs": "^6.14.1",
    "tar-fs": "^2.1.4",
    "tmp": "^0.2.4",
    "undici": "^7.18.2"
  }
}
