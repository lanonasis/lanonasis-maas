{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": true,
        "types": [
            "vitest/globals",
            "@testing-library/jest-dom",
            "node"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/test/**/*",
        "src/**/__tests__/**/*",
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "vitest.config.ts"
    ],
    "exclude": [
        "node_modules",
        "out",
        "dist",
        "coverage"
    ]
}