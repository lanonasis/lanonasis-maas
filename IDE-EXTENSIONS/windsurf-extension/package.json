{
  "name": "lanonasis-memory-windsurf",
  "displayName": "LanOnasis Memory Assistant for Windsurf",
  "description": "Memory as a Service integration optimized for Windsurf IDE - AI-powered memory management with semantic search and enhanced CLI/MCP features",
  "version": "1.4.5",
  "publisher": "LanOnasis",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/lanonasis/lanonasis-maas"
  },
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Machine Learning",
    "Data Science",
    "AI"
  ],
  "keywords": [
    "memory",
    "ai",
    "assistant",
    "mcp",
    "model-context-protocol",
    "api-keys",
    "memory-management",
    "windsurf",
    "LanOnasis",
    "maas",
    "memory-as-a-service"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:lanonasis.searchMemory",
    "onCommand:lanonasis.createMemory",
    "onCommand:lanonasis.captureContext",
    "onCommand:lanonasis.captureClipboard",
    "onCommand:lanonasis.quickCapture",
    "onCommand:lanonasis.authenticate",
    "onView:lanonasisMemories"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lanonasis.searchMemory",
        "title": "Search Memories",
        "category": "LanOnasis",
        "icon": "$(search)"
      },
      {
        "command": "lanonasis.createMemory",
        "title": "Create Memory from Selection",
        "category": "LanOnasis",
        "icon": "$(add)"
      },
      {
        "command": "lanonasis.createMemoryFromFile",
        "title": "Create Memory from Current File",
        "category": "LanOnasis",
        "icon": "$(file-add)"
      },
      {
        "command": "lanonasis.createMemoryFromWorkspace",
        "title": "Create Memory from Workspace Context",
        "category": "LanOnasis",
        "icon": "$(folder-library)"
      },
      {
        "command": "lanonasis.captureContext",
        "title": "Capture to Memory",
        "category": "LanOnasis",
        "icon": "$(save)"
      },
      {
        "command": "lanonasis.captureClipboard",
        "title": "Capture Clipboard to Memory",
        "category": "LanOnasis",
        "icon": "$(clippy)"
      },
      {
        "command": "lanonasis.quickCapture",
        "title": "Quick Capture (Selection or Clipboard)",
        "category": "LanOnasis",
        "icon": "$(zap)"
      },
      {
        "command": "lanonasis.authenticate",
        "title": "Authenticate with Lanonasis",
        "category": "LanOnasis",
        "icon": "$(key)"
      },
      {
        "command": "lanonasis.logout",
        "title": "Logout from Lanonasis",
        "category": "LanOnasis",
        "icon": "$(sign-out)"
      },
      {
        "command": "lanonasis.refreshMemories",
        "title": "Refresh Memories",
        "category": "LanOnasis",
        "icon": "$(refresh)"
      },
      {
        "command": "lanonasis.openMemory",
        "title": "Open Memory",
        "category": "LanOnasis"
      },
      {
        "command": "lanonasis.switchMode",
        "title": "Switch Gateway/Direct API Mode",
        "category": "LanOnasis",
        "icon": "$(settings-gear)"
      },
      {
        "command": "lanonasis.aiAssist",
        "title": "AI Memory Assistant",
        "category": "LanOnasis",
        "icon": "$(sparkle)"
      },
      {
        "command": "lanonasis.showConnectionInfo",
        "title": "Show Connection Status",
        "category": "LanOnasis",
        "icon": "$(info)"
      },
      {
        "command": "lanonasis.showMCPStatus",
        "title": "Show MCP Server Status",
        "category": "LanOnasis",
        "icon": "$(plug)"
      }
    ],
    "keybindings": [
      {
        "command": "lanonasis.searchMemory",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m",
        "when": "editorTextFocus"
      },
      {
        "command": "lanonasis.createMemory",
        "key": "ctrl+shift+alt+m",
        "mac": "cmd+shift+alt+m",
        "when": "editorHasSelection"
      },
      {
        "command": "lanonasis.captureContext",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorHasSelection || terminalFocus || panelFocus"
      },
      {
        "command": "lanonasis.captureClipboard",
        "key": "ctrl+alt+v",
        "mac": "cmd+alt+v"
      },
      {
        "command": "lanonasis.quickCapture",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "!editorTextFocus || editorHasSelection"
      },
      {
        "command": "lanonasis.aiAssist",
        "key": "ctrl+shift+alt+a",
        "mac": "cmd+shift+alt+a",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "lanonasis.createMemory",
          "when": "editorHasSelection",
          "group": "lanonasis"
        },
        {
          "command": "lanonasis.aiAssist",
          "when": "editorTextFocus",
          "group": "lanonasis"
        }
      ],
      "view/title": [
        {
          "command": "lanonasis.refreshMemories",
          "when": "view == lanonasisMemories",
          "group": "navigation"
        },
        {
          "command": "lanonasis.authenticate",
          "when": "view == lanonasisMemories && !lanonasis.authenticated",
          "group": "navigation"
        },
        {
          "command": "lanonasis.logout",
          "when": "view == lanonasisMemories && lanonasis.authenticated",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "lanonasis.createMemoryFromWorkspace",
          "group": "lanonasis"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lanonasis",
          "title": "Lanonasis Memory",
          "icon": "images/icon.svg"
        }
      ]
    },
    "views": {
      "lanonasis": [
        {
          "type": "webview",
          "id": "lanonasis.sidebar",
          "name": "Memory Assistant",
          "icon": "images/icon.svg",
          "contextualTitle": "Lanonasis Memory"
        },
        {
          "id": "lanonasisMemories",
          "name": "Tree View",
          "when": "lanonasis.enabled && config.lanonasis.showTreeView"
        }
      ]
    },
    "configuration": {
      "title": "Lanonasis Memory",
      "properties": {
        "lanonasis.apiUrl": {
          "type": "string",
          "default": "https://api.lanonasis.com",
          "markdownDescription": "Lanonasis Memory Service API URL. Change only if using a custom deployment."
        },
        "lanonasis.gatewayUrl": {
          "type": "string",
          "default": "https://api.lanonasis.com",
          "markdownDescription": "Onasis Gateway URL for centralized API management. Recommended for most users."
        },
        "lanonasis.authUrl": {
          "type": "string",
          "default": "https://auth.lanonasis.com",
          "markdownDescription": "OAuth authentication server URL. Only change if using a custom authentication deployment."
        },
        "lanonasis.useGateway": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Use Onasis Gateway for centralized API management. Default is direct REST API connection."
        },
        "lanonasis.useAutoAuth": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Enable automatic OAuth2 authentication with browser redirect"
        },
        "lanonasis.defaultMemoryType": {
          "type": "string",
          "enum": [
            "context",
            "project",
            "knowledge",
            "reference",
            "personal",
            "workflow"
          ],
          "default": "context",
          "markdownDescription": "Default memory type for new memories"
        },
        "lanonasis.searchLimit": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 50,
          "markdownDescription": "Maximum number of search results to show"
        },
        "lanonasis.enableAutoCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable memory-based code completion suggestions"
        },
        "lanonasis.autoRefreshInterval": {
          "type": "number",
          "default": 300000,
          "description": "Auto-refresh memories interval in milliseconds (default: 5 minutes)"
        },
        "lanonasis.enableAiAssist": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered memory assistance and suggestions"
        },
        "lanonasis.windsurf.enableContextAwareness": {
          "type": "boolean",
          "default": true,
          "description": "Enable Windsurf-specific context awareness features"
        },
        "lanonasis.preferCLI": {
          "type": "boolean",
          "default": true,
          "description": "Prefer CLI integration when @lanonasis/cli v3.0.6+ is available"
        },
        "lanonasis.enableMCP": {
          "type": "boolean",
          "default": true,
          "description": "Enable Model Context Protocol channels when available"
        },
        "lanonasis.mcpAutoDiscover": {
          "type": "boolean",
          "default": true,
          "description": "Auto-discover embedded CLI MCP server at startup"
        },
        "lanonasis.mcpServerUrl": {
          "type": "string",
          "default": "",
          "markdownDescription": "Custom MCP server URL. Leave empty for auto-discovery (default: `http://localhost:3001`)"
        },
        "lanonasis.cliDetectionTimeout": {
          "type": "number",
          "default": 2000,
          "minimum": 500,
          "maximum": 10000,
          "description": "CLI detection timeout in milliseconds"
        },
        "lanonasis.verboseLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable verbose logging for CLI integration debugging"
        },
        "lanonasis.showPerformanceFeedback": {
          "type": "boolean",
          "default": false,
          "description": "Show brief performance feedback (CLI vs API usage)"
        },
        "lanonasis.showTreeView": {
          "type": "boolean",
          "default": false,
          "description": "Show traditional tree view alongside modern sidebar (for advanced users)"
        },
        "lanonasis.enableBulkActions": {
          "type": "boolean",
          "default": true,
          "description": "Enable bulk selection, tag, delete, and export actions in the sidebar"
        },
        "lanonasis.memoryTemplates": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "Bug report: Steps to reproduce / Expected / Actual / Logs",
            "Note: Context / Key points / Next steps",
            "Spec: Goal / Scope / Constraints / Open questions"
          ],
          "description": "Templates shown in the create form; each entry is a preset body"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "echo \"Skipping extension pretest in monorepo Nx run\"",
    "lint": "eslint src --ext ts",
    "test": "echo \"Skipping extension integration tests in monorepo Nx run\"",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "vsce": "^2.15.0",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "zod": "^3.23.8",
    "@lanonasis/memory-client": "file:../../packages/memory-client",
    "@lanonasis/ide-extension-core": "file:../../packages/ide-extension-core"
  },
  "optionalDependencies": {
    "keytar": "^7.9.0"
  },
  "author": "Lanonasis Team",
  "license": "MIT"
}
