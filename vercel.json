{
  "version": 2,
  "name": "LanOnasis-developer",
  "buildCommand": "cd dashboard && bun install && bun run build",
  "outputDirectory": "dashboard/dist",
  "installCommand": "bun install",
  "builds": [
    {
      "src": "api/functions/api.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    },
    {
      "src": "api/functions/mcp-sse.js", 
      "use": "@vercel/node",
      "config": {
        "maxDuration": 300
      }
    },
    {
      "src": "api/functions/orchestrate.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 60
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/v1/health",
      "destination": "/api/functions/api?path=/api/v1/health"
    },
    {
      "source": "/api/v1/orchestrate",
      "destination": "/api/functions/orchestrate?path=/api/v1/orchestrate"
    },
    {
      "source": "/api/v1/(.*)",
      "destination": "/api/functions/api?path=/api/v1/$1"
    },
    {
      "source": "/mcp/sse",
      "destination": "/api/functions/mcp-sse?path=/mcp/sse"
    },
    {
      "source": "/sse",
      "destination": "/api/functions/mcp-sse?path=/sse"
    },
    {
      "source": "/health",
      "destination": "/api/functions/api?path=/health"
    },
    {
      "source": "/metrics",
      "destination": "/api/functions/api?path=/metrics"
    },
    {
      "source": "/dashboard",
      "destination": "/index.html"
    },
    {
      "source": "/dashboard/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/docs",
      "destination": "/docs/index.html"
    },
    {
      "source": "/docs/(.*)",
      "destination": "/docs/$1"
    },
    {
      "source": "/",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-API-Key"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache"
        }
      ]
    },
    {
      "source": "/mcp/sse",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/event-stream"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache"
        },
        {
          "key": "Connection",
          "value": "keep-alive"
        }
      ]
    }
  ],
  "env": {
    "NODE_VERSION": "18",
    "NODE_ENV": "production",
    "ENABLE_EXPERIMENTAL_COREPACK": "1"
  },
  "regions": ["iad1"]
}