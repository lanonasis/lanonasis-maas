# Test Environment Configuration
NODE_ENV=test
PORT=3001
HOST=localhost

# Test Database (use test instance of Supabase)
SUPABASE_URL=http://localhost:54321
SUPABASE_KEY=test_anon_key
SUPABASE_SERVICE_KEY=test_service_key

# Test Authentication
JWT_SECRET=test-jwt-secret-for-testing-only-do-not-use-in-production
JWT_EXPIRES_IN=1h

# Test OpenAI (can be mocked)
OPENAI_API_KEY=test-openai-key

# Test Redis (use test database)
REDIS_URL=redis://localhost:6379/1

# Test Logging
LOG_LEVEL=error
LOG_FORMAT=simple

# Test Rate Limiting (more lenient for tests)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Test API Configuration
API_VERSION=v1
API_PREFIX=/api

# Test Monitoring
ENABLE_METRICS=false