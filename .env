# Development environment for testing Swagger UI
NODE_ENV=development
PORT=3000
HOST=localhost

# Required environment variables (set via repository secrets)
SUPABASE_URL=${SUPABASE_URL}
SUPABASE_KEY=${SUPABASE_ANON_KEY}
SUPABASE_SERVICE_KEY=${SUPABASE_SERVICE_ROLE_KEY}
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h

# AI Configuration
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}

# Lingo.dev Configuration
LINGO_API_KEY=${LINGO_API_KEY_PRIMARY}
LINGO_API_KEY_SECONDARY=${LINGO_API_KEY_SECONDARY}

# Optional for Swagger UI testing
LOG_LEVEL=info
ENABLE_METRICS=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
API_VERSION=v1
API_PREFIX=/api