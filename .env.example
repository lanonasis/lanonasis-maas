# Memory as a Service (MaaS) - Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# ============================================
# SUPABASE DATABASE CONFIGURATION
# Get these from: https://supabase.com/dashboard/project/your-project/settings/api
# ============================================
SUPABASE_URL=https://<project-ref>.supabase.co
SUPABASE_ANON_KEY=REDACTED_SUPABASE_ANON_KEY
SUPABASE_SERVICE_KEY=REDACTED_SUPABASE_SERVICE_ROLE_KEY

# ============================================
# AUTHENTICATION
# Generate a secure random string (min 32 characters)
# ============================================
JWT_SECRET=REDACTED_JWT_SECRET
JWT_EXPIRES_IN=24h

# ============================================
# AI SERVICES
# Get your API key from: https://platform.openai.com/api-keys
# ============================================
OPENAI_API_KEY=REDACTED_OPENAI_API_KEY

# ============================================
# API KEY CONFIGURATION
# ============================================
# AES-256-GCM encryption key (must be exactly 32 characters)
API_KEY_ENCRYPTION_KEY=your_32_character_encryption_key

# API key prefix configuration
API_KEY_PREFIX_DEVELOPMENT=sk_test_
API_KEY_PREFIX_PRODUCTION=sk_live_
API_KEY_DEFAULT_EXPIRY_DAYS=365

# MCP (Model Context Protocol) configuration
MCP_ENABLED=true
MCP_ACCESS_REQUEST_EXPIRY_HOURS=24
MCP_SESSION_TIMEOUT_HOURS=8
MCP_MAX_TOOLS_PER_KEY=10

# ============================================
# REDIS CACHING (REQUIRED for API key caching)
# For improved performance in production
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_KEY_PREFIX=maas:
REDIS_API_KEY_TTL=300
REDIS_SESSION_TTL=28800

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL=info
ENABLE_METRICS=true

# ============================================
# RATE LIMITING
# Adjust based on your plan and requirements
# ============================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CORS CONFIGURATION
# Add your frontend domains
# ============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,https://your-frontend.com
CORS_CREDENTIALS=true

# ============================================
# API CONFIGURATION
# ============================================
API_VERSION=v1
API_PREFIX=/api

# ============================================
# DEVELOPMENT SETTINGS
# Uncomment for development mode
# ============================================
# DEBUG=true
# VERBOSE_LOGGING=true
# HOT_RELOAD=true

# ============================================
# PRODUCTION SETTINGS
# Enable for production deployment
# ============================================
# TRUST_PROXY=true
# SECURE_COOKIES=true
# SESSION_COOKIE_SECURE=true
# SESSION_COOKIE_HTTP_ONLY=true
# SESSION_COOKIE_SAME_SITE=strict

# ============================================
# OPTIONAL: WEBHOOK CONFIGURATION
# For external integrations
# ============================================
# WEBHOOK_SECRET=REDACTED_WEBHOOK_SECRET
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook

# ============================================
# OPTIONAL: EMAIL NOTIFICATIONS
# For system alerts and notifications
# ============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# FROM_EMAIL=noreply@your-domain.com

# ============================================
# OPTIONAL: CLOUD STORAGE
# For file uploads and backups
# ============================================
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=memory-service-backups

# ============================================
# SECURITY & MONITORING
# ============================================
# Security monitoring
SECURITY_ALERT_ENABLED=true
SECURITY_ALERT_THRESHOLD_CRITICAL=5
SECURITY_ALERT_THRESHOLD_HIGH=10
ANOMALY_DETECTION_ENABLED=true
ANOMALY_DETECTION_SENSITIVITY=0.85

# Auto-suspension thresholds
AUTO_SUSPEND_FAILED_AUTH_ATTEMPTS=10
AUTO_SUSPEND_RATE_LIMIT_VIOLATIONS=50
AUTO_SUSPEND_ANOMALY_SCORE=0.95

# ============================================
# ENTERPRISE FEATURES
# ============================================
# HSM (Hardware Security Module) integration
# HSM_ENABLED=false
# HSM_MODULE_PATH=/usr/lib/pkcs11/your-hsm.so
# HSM_SLOT_ID=0
# HSM_PIN=your_hsm_pin
# HSM_KEY_LABEL=api_key_master

# Proxy token configuration
PROXY_TOKEN_ENABLED=true
PROXY_TOKEN_EXPIRY_HOURS=1
PROXY_TOKEN_MAX_USES=100

# ============================================
# BACKUP & RECOVERY
# ============================================
# Backup configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_ENABLED=true
# BACKUP_S3_BUCKET=memory-service-backups
# BACKUP_S3_PREFIX=api-keys/

# Key rotation
KEY_ROTATION_REMINDER_DAYS=30
KEY_ROTATION_ENFORCE_DAYS=90

# ============================================
# ANALYTICS & TELEMETRY
# ============================================
ANALYTICS_ENABLED=true
TELEMETRY_ENDPOINT=https://analytics.your-domain.com
USAGE_TRACKING=true
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL_MS=60000

# Metrics retention
METRICS_RETENTION_DAYS=90
METRICS_AGGREGATION_ENABLED=true
METRICS_AGGREGATION_INTERVALS=hour,day,week,month