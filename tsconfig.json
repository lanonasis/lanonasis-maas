{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "node"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./src",
    // NOTE: The '@/*' path alias requires corresponding configuration in bundlers/transpilers (e.g., webpack, vite, jest) to work correctly in all environments.
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true
  },
  "references": [
    {
      "path": "./packages/lanonasis-sdk"
    },
    {
      "path": "./packages/memory-client"
    },
    {
      "path": "./packages/memory-engine"
    }
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "supabase/**/*",
    "src/archive/**",
    "archive/**"
  ]
}